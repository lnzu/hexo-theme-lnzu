<section class="posts">
  <!--文章列表-->
  <% page.posts.each(function (post) { %>
    <div class="mulu">
      <span class="mulu-time"><%- date(post.date, "YYYY/MM/DD HH:mm:ss") %></span>
      <a class="mulu-title-link" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </div>
  <% }) %>
  
  <!--分页的 上一页 下一页-->
  <div class="pagination">
    <% if (page.total > 1) { %>
      <% if (page.current == 1) { %>
        <span class="prev-no">上一页</span>
      <% } else { %>
        <a href="<%- url_for(page.prev_link) %>">上一页</a>
      <% } %>
      
      <span><%- page.current %>/<%- page.total %></span>
     
      <% if (page.current == page.total) { %>
        <span class="prev-no">下一页</span>
      <% } else { %>
        <a href="<%- url_for(page.next_link) %>">下一页</a>
      <% } %>
      
    <% } %>
  </div>
  
</section>