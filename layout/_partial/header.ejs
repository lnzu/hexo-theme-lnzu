<!--这是页头页面-->
<header class="header">
  
  <!--网站标题-->
  <a href="<%- url_for() %>" class="header-title"><%= config.title %></a>
  
  <!--显示菜单-->
  <div class="menu">
    <% for (var i in theme.menu) { %> 
      <a href="<%- url_for(theme.menu[i]) %>"><%= __('menu.'+i).replace("menu.", "") %></a>
    <% } %>
  </div>
  
  <!--如果是文章显示页面关闭网站描述-->
  <% if (is_post() == false) { %>
    <!--网站描述-->
    <p id="discription"><%- config.description %></p>
    <!--是否开启网站的描述打字-->
    <% if ( theme.typing ) { %>
      <%- js('js/typing.js') %>
    <% } %>
    <hr/>
  <% } %>
   
</header>